@model FMBusiness.ViewModels.AccountVModels.RegisterVModel

<div class="form-container container">

    @using (
        Html.BeginForm(
                "Register",
                "Account",
                FormMethod.Post,
                new { @id = "register-form", @class = "container" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal container">
            <header>
                <h4>@Resources.TitleForTheApp</h4>
            </header>
            <hr />
            <div class="col-md-10">
                <div class="form-group col-md-5">
                    <div>
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = Resources.LabelForName } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-md-5">
                    <div>
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = Resources.LabelForEmail } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-md-5">
                    <div>
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = Resources.LabelForPassword } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>



                <div class="form-group col-md-5">
                    <div>
                        @Html.EditorFor(model => model.PasswordRepeated, new { htmlAttributes = new { @class = "form-control", @placeholder = Resources.LabelForRepeatPassword } })
                        @Html.ValidationMessageFor(model => model.PasswordRepeated, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group col-md-5">
                    <div>
                        @Html.EditorFor(model => model.Terms, new { htmlAttributes = new { @class = "" } })
                        @Html.LabelFor(model => model.Terms, htmlAttributes: new { @class = "control-label" })
                        @Html.ValidationMessageFor(model => model.Terms, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-md-5">
                    <div>
                        <input type="submit" value="@Resources.ActionRegisterButton" class="btn btn-default" />
                    </div>
                </div>
            </div>


        </div>
    }

    <footer>
        <p>@Resources.TextForHavingAccountAlready</p>
        @Html.ActionLink(Resources.ActionLoginButton, "Login", null, null)
    </footer>

    <p class="lang">
        @Html.ActionLink("PL", "SetCulture", new { culture = "pl", returnUrl = "Register" })
        @Html.ActionLink("EN", "SetCulture", new { culture = "en", returnUrl = "Register" })
    </p>
